<org.kontalk.ui.ImageContentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

<ImageView
    android:id="@+id/image_balloon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"/>

<org.kontalk.dd.CircularProgressButton
    android:id="@+id/circularProgress"
    android:layout_width="130dp"
    android:layout_height="64dp"
    android:layout_centerInParent="true"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    app:cpb_colorText="@color/cpb_white" />

</org.kontalk.ui.ImageContentView>
