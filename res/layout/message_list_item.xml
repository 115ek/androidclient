<org.kontalk.xmpp.ui.MessageListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_list_item"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/balloon_view"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view"
            android:maxWidth="@dimen/message_text_width"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/status_indicator"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:adjustViewBounds="false"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/lock_icon"
                android:visibility="gone"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/msg_status_encrypted"
                android:src="@drawable/ic_msg_warning" />

            <TextView android:id="@+id/date_view"
                style="@android:style/TextAppearance.Small"
                android:textSize="@dimen/dateview_text_size"
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</org.kontalk.xmpp.ui.MessageListItem>
