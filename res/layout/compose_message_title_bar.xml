<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlebar_bg" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_contact_picture"
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/title_attach"
        android:background="@drawable/divider" />

    <ImageButton
        android:id="@+id/title_attach"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/list_selector_background"
        android:contentDescription="@string/menu_attachment"
        android:onClick="titleAttachment"
        android:scaleType="centerInside"
        android:src="@drawable/ic_title_attach" />

    <TextView
        android:id="@android:id/title"
        style="@style/titleTextStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/avatar"
        android:layout_toLeftOf="@+id/divider"
        android:layout_toRightOf="@+id/avatar"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/status"
        style="@style/titleTextStyleMicro"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignLeft="@android:id/title"
        android:layout_alignRight="@+id/divider"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:gravity="center_vertical" />

</RelativeLayout>
