<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/titlebar_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@android:id/title"
        style="@style/titleTextStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/separator_search"
        android:background="@drawable/divider"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:visibility="gone"/>

    <ImageButton
        android:contentDescription="@string/menu_search"
        android:background="@android:drawable/list_selector_background"
        android:src="@drawable/ic_title_search"
        android:scaleType="centerInside"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:id="@+id/title_search"
        android:visibility="gone"
        android:onClick="titleSearch"/>

    <ImageView
        android:background="@drawable/divider"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"/>

    <ImageButton
        android:contentDescription="@string/menu_compose"
        android:background="@android:drawable/list_selector_background"
        android:src="@drawable/ic_title_compose"
        android:scaleType="centerInside"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:id="@+id/title_compose"
        android:onClick="titleComposeMessage"/>

</LinearLayout>
