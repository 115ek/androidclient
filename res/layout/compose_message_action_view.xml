<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlebar_bg" >

    <ImageView
        android:id="@+id/avatar"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/avatar_margin"
        android:layout_marginRight="4dp"
        android:onClick="onAvatarClick"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_contact_picture"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/titlebox"
        android:background="?attr/actionBarItemBackground"
        android:clickable="true"
        android:onClick="onTitleboxClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="2dip"
        android:paddingBottom="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Widget.ActionBar.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="Self Test"
            android:scrollHorizontally="true" />

        <TextView
            android:id="@+id/summary"
            style="@style/TextAppearance.Widget.ActionBar.Subtitle.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="User is online"
            android:scrollHorizontally="true" />
    </LinearLayout>

</RelativeLayout>
