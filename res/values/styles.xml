<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- default theme selector -->
  <style name="Theme.Light" parent="Theme.Sherlock.Light">
      <item name="actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Blue.Bold</item>
      <item name="android:actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Blue.Bold</item>
  </style>

  <style name="Theme.Light.Subtitle" parent="Theme.Light">
      <item name="actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Blue</item>
      <item name="android:actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Blue</item>
  </style>

  <style name="Widget.Sherlock.Light.ActionBar.Blue" parent="Widget.Sherlock.Light.ActionBar.Solid">
    <item name="background">@drawable/titlebar_bg</item>
    <item name="android:background">@drawable/titlebar_bg</item>
    <item name="titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse</item>
    <item name="android:titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse</item>
    <item name="subtitleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse</item>
    <item name="android:subtitleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse</item>
    <!--
    <item name="indeterminateProgressStyle">@style/Widget.ProgressBar</item>
    <item name="android:indeterminateProgressStyle">@style/Widget.ProgressBar</item>
     -->
  </style>

  <style name="Widget.Sherlock.Light.ActionBar.Blue.Bold" parent="Widget.Sherlock.Light.ActionBar.Blue">
    <item name="titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse.Bold</item>
    <item name="android:titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse.Bold</item>
  </style>

  <style name="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse.Bold"
      parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
      <item name="android:textStyle">bold</item>
  </style>

  <!--
  <style name="Widget.ProgressBar" parent="android:Widget.ProgressBar.Inverse">
    <item name="android:minWidth">24dip</item>
    <item name="android:maxWidth">24dip</item>
    <item name="android:minHeight">24dip</item>
    <item name="android:maxHeight">24dip</item>
    <item name="android:layout_marginRight">24dip</item>
  </style>
   -->

  <!-- default light-to-dark theme selector -->
  <style name="Theme.Light2" parent="android:Theme"/>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />
    
    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>
    
    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>
    
    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    
    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />
    
    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>
    
    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>
    
    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

</resources>
