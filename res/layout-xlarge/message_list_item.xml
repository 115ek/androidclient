<org.kontalk.ui.MessageListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_list_item"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:paddingLeft="5dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/msg_list_item_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/name_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/date_view"
            android:paddingBottom="4dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="4dip"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/date_view"
            android:linksClickable="true"
            android:autoLink="all"
            android:paddingBottom="4dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="4dip"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/text_view"
            android:paddingBottom="4dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="4dip"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/lock_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_view"
            android:layout_alignTop="@+id/name_view"
            android:layout_toLeftOf="@id/date_view"
            android:paddingBottom="4dip"
            android:src="@drawable/ic_msg_crypt" />

        <ImageView
            android:id="@+id/status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_view"
            android:layout_toLeftOf="@+id/lock_icon"
            android:adjustViewBounds="false"
            android:paddingBottom="4dip"
            android:src="@drawable/ic_msg_delivered"
            android:visibility="gone" />

    </RelativeLayout>

</org.kontalk.ui.MessageListItem>
