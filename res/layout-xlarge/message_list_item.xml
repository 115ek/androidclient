<?xml version="1.0" encoding="utf-8"?>
<!-- org.kontalk.ui.MessageListItem -->
<org.kontalk.ui.MessageListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_list_item"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:paddingLeft="5dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/msg_list_item_background"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
    <TextView android:id="@+id/name_view"
    	android:paddingRight="5dip"
    	android:paddingLeft="5dip"
    	android:paddingTop="4dip"
    	android:paddingBottom="4dip"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textAppearance="?android:attr/textAppearanceInverse"
    	android:layout_above="@id/text_view"
    	android:layout_alignParentTop="true"
    	android:layout_toLeftOf="@+id/date_view"
    	android:layout_alignParentLeft="true"/>
    <TextView android:id="@+id/text_view"
    	android:paddingRight="5dip"
    	android:paddingLeft="5dip"
    	android:paddingTop="4dip"
    	android:paddingBottom="4dip"
    	android:textSize="16sp"
    	android:textAppearance="?android:attr/textAppearance"
    	android:layout_width="fill_parent"
    	android:linksClickable="false"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/date_view"
    	android:layout_alignParentLeft="true"/>
    <TextView android:id="@+id/date_view"
    	android:paddingTop="4dip"
    	android:paddingBottom="4dip"
    	android:paddingRight="5dip"
    	android:layout_width="wrap_content"
    	android:paddingLeft="5dip"
    	android:layout_height="wrap_content"
    	android:textAppearance="?android:attr/textAppearanceInverse"
    	android:layout_alignParentTop="true"
    	android:layout_alignRight="@+id/text_view"/>
	<ImageView android:id="@+id/status_indicator"
		android:adjustViewBounds="false"
		android:layout_width="wrap_content"
		android:visibility="gone"
		android:layout_height="wrap_content"
		android:paddingBottom="4dip"
		android:layout_alignRight="@+id/name_view"
		android:layout_above="@+id/text_view"
		android:layout_alignTop="@+id/name_view"/>
	</RelativeLayout>
</org.kontalk.ui.MessageListItem>
